<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>
<body>
    <%- include('../includes/nav.ejs') %>

    <main>
        <% if(errorMessage){ %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="email">電子信箱</label>
                <input class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                type="email" name="email" id="email" value="<%= lastInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">密碼</label>
                <input class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                type="password" name="password" id="password" value="<%= lastInput.password %>">
            </div>
            
            <button class="btn" type="submit">登入</button>
            <a class="btn" href="/reset-password">忘記密碼</a>
        </form>
        
    </main>

<%- include('../includes/end.ejs') %>
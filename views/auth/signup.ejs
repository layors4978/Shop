<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>
<body>
    <%- include('../includes/nav.ejs') %>

    <main>
        <% if(errorMessage){ %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/signup" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="email">電子信箱</label>
                <input class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                type="email" name="email" id="email" value="<%= lastInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">密碼</label>
                <input class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                type="password" name="password" id="password" value="<%= lastInput.password %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">確認密碼</label>
                <input class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>"
                type="password" name="confirmPassword" id="confirmPassword" value="<%= lastInput.confirmPassword %>">
            </div>
            
            <button class="btn" type="submit">註冊</button>
        </form>
    </main>

<%- include('../includes/end.ejs') %>